
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users Collection
    // - Allow users to read their own profile
    // - Allow users to create their own profile (on signup)
    // - Allow users to update their own profile, but not change protected fields like walletBalance or wins/losses
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && !("walletBalance" in request.resource.data) && !("wins" in request.resource.data) && !("losses" in request.resource.data);
    }
    
    // Bets Collection
    // - Allow anyone to read public bets
    // - Allow authenticated users to create bets
    // - Allow only the backend to update the status of a bet (e.g., to 'active' or 'settled')
    match /bets/{betId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if false; // Only backend can update/delete
    }

    // Transactions Collection
    // - Users can only read their own transactions
    // - Only the backend can create, update or delete transactions
     match /transactions/{transactionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false; // Only backend can write
    }
    
    // Games and Odds data is public read-only for clients
    match /games/{gameId} {
      allow read: if true;
      allow write: if false; // Only backend can write
      
      match /bookmaker_odds/{bookmakerId} {
        allow read: if true;
        allow write: if false; // Only backend can write
      }
    }
    
    // Notifications
    // - User can only access their own notifications
    match /users/{userId}/notifications/{notificationId} {
        allow read, write: if isOwner(userId);
    }

    // Leaderboard
    // - Publicly readable
    match /leaderboard/{docId} {
        allow read: if true;
        allow write: if false;
    }
  }
}
