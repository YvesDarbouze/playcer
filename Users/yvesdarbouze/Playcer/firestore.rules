
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read public profile data of other users.
    // Users can only create, update, or delete their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Game and odds data is public, but should only be written by the backend.
    match /games/{gameId} {
      allow read: if true;
      allow write: if false; // Should only be written by backend functions

      match /bookmaker_odds/{bookmakerId} {
        allow read: if true;
        allow write: if false; // Should only be written by backend functions
      }
    }

    // Bets can be created by any authenticated user.
    // Bets can be read if they are public, or if the user is the creator or taker.
    // Bets can only be updated (e.g. accepted) by the taker.
    match /bets/{betId} {
      allow read: if resource.data.isPublic == true || 
                     (request.auth != null && (request.auth.uid == resource.data.creatorId || request.auth.uid == resource.data.takerId));
      allow create: if request.auth != null && request.resource.data.creatorId == request.auth.uid;
      allow update: if request.auth != null && 
                     (request.auth.uid == resource.data.takerId || request.auth.uid == resource.data.creatorId);
    }
    
    // Transactions can only be read by the user they belong to.
    // Transactions should only be created by the backend.
    match /transactions/{transactionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if false; // Should only be written by backend functions
      allow update, delete: if false;
    }
  }
}
